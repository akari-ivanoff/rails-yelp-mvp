<h1><%= @restaurant.name %></h1>
<div class="d-flex justify-content-between">
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
</div>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"><%= "#{review.content} / #{'*' * review.rating}" %></li>
  <% end %>
</ul>
<hr>
<!-- <br> -->
