<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary w-100" %>
<% 
=end %>
<h3>Add a review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :select, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.button :submit, class: "btn btn-primary w-100" %>
<% end %>
<hr>
