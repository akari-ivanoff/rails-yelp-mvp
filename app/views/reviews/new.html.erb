<h1>New review for <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :select, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.button :submit, class: "btn btn-primary w-100" %>
<% end %>
<hr>
<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-secondary" %>